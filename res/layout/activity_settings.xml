<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
	>    
	
    <include
        android:id="@+id/title_bar"
        layout="@layout/title" />
    
    <LinearLayout
        android:id="@+id/layout_server_ip"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/title_bar"
        android:background="@drawable/bg_layerlist"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:clickable="true"  >
                
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_server_ip_key"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:text="服务器ip"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                
                 <ImageView 
			            android:layout_marginRight="5dp"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center_vertical"
			            android:src="@drawable/ic_arrow" />
                
         </LinearLayout>
         <TextView android:id="@+id/text_server_ip_value"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:text="http://192.168.1.101"
             android:textSize="12sp"
             android:textColor="@color/server_ip"/>
	</LinearLayout>
	
    <Button 
        android:id="@+id/btn_getcontract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_gravity="center"
        android:text="获取"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="合同"
            android:textColor="@android:color/black"
            android:textSize="22sp"/>
    	<Spinner android:id="@+id/setting_spinner_contract"
        	android:layout_width="0dp" 
        	android:layout_weight="1"
        	android:layout_height="wrap_content"
        	/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="钻孔"
            android:textColor="@android:color/black"
            android:textSize="22sp"/>
    	<Spinner android:id="@+id/setting_spinner_hole"
        	android:layout_width="0dp" 
        	android:layout_weight="1"
        	android:layout_height="wrap_content"
        	/>
    </LinearLayout>
    
    <!-- 项目经理 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:text="项目经理"
            android:gravity="right"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
        
        <TextView android:id="@+id/settings_projectmanager"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
    </LinearLayout>
    
    <!-- 机长 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:text="机长"
            android:gravity="right"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
        
        <TextView android:id="@+id/settings_holeleader"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
    </LinearLayout>
    
    <!-- 班长1 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:text="班长"
            android:gravity="right"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
        
        <TextView android:id="@+id/settings_tourleader1"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
    </LinearLayout>
    
    <!-- 班长2 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:text="班长"
            android:gravity="right"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
        
        <TextView android:id="@+id/settings_tourleader2"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
    </LinearLayout>
    
    <!-- 班长3 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:text="班长"
            android:gravity="right"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
        
        <TextView android:id="@+id/settings_tourleader3"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
    </LinearLayout>
    
    
</LinearLayout>