        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.dreaming.drilling.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dreaming.drilling.activity.WorkcontentActivity"
            android:label="@string/title_activity_workcontent" >
        </activity>
        <activity
            android:name="com.dreaming.drilling.activity.WorkcontentListActivity"
            android:label="@string/title_activity_workcontent_list" >
        </activity>
        <activity
            android:name="com.dreaming.drilling.activity.TakeoverActivity"
            android:label="@string/title_activity_takeover" >
        </activity>
        <activity
            android:name="com.dreaming.drilling.activity.TourreportViewActivity"
            android:label="@string/title_activity_tourreport_view" >
        </activity>
    </application>

</manifest>
